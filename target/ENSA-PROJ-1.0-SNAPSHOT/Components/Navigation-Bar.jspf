<html xlmns="http://w2.org/1999/xhtml"
      xlmns:th="http://www.thymeleaf.org"
      lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">

</head>
<body>
<!-- Primary Navigation Menu -->
<header class="bg-white">
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5">
                <span class="sr-only">Gestion Etudiants</span>
                <img class="h-8 w-auto" src="DCA.jpg" alt="ENSAT">
            </a>
        </div>


        <div class="hidden lg:flex lg:gap-x-40">


            <a href="/" class="text-sm font-semibold leading-6 text-gray-900">Dashboard</a>

            <div class="relative" id="filiereList">
                <button id="buttonList" type="button" class="flex items-center gap-x-1 text-sm font-semibold leading-6 text-gray-900" aria-expanded="false" >
                    Filiere
                    <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                    </svg>
                </button>


                <div id="dropDownList_filiere" style="display: none" class="absolute -left-8 top-full z-10 mt-3 w-screen max-w-md overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5" >
                    <div class="p-4">
                        <div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
                            <a href="/Filiere/AjouterFiliere.jsp">Ajouter un Filiere</a>
                        </div>
                        <div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
                            <a href="/FiliereServlet">Afficher les filieres</a>
                        </div>

                    </div>
                </div>
            </div>

            <div class="relative" id="etudiantList">
                <button type="button" class="flex items-center gap-x-1 text-sm font-semibold leading-6 text-gray-900" aria-expanded="false" >
                    Etudiant
                    <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                    </svg>
                </button>

                <!-- dropdown -->
                <div id="dropDownList_etudiant" style="display: none" class="absolute -left-8 top-full z-10 mt-3 w-screen max-w-md overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5"  >
                    <div class="p-4">
                        <div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
                            <a href="/Etudiant/AjouterEtudiant.jsp">Ajouter un Etudiant</a>
                        </div>
                        <div   class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
                            <a href="/EtudiantServlet">Afficher les Etudiants</a>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        </div>
    </nav>
</header>

<script>

        var filiereList = document.getElementById("filiereList")
        var dropDownList_filiere = document.getElementById("dropDownList_filiere")
        var etudiantList = document.getElementById("etudiantList")
        var dropDownList_etudiant = document.getElementById("dropDownList_etudiant")


        filiereList.addEventListener(
            "click",
            () => {
                    if(dropDownList_filiere.style.display === "none"){
                        dropDownList_filiere.style.display = "block";
                    }
                    else{
                        dropDownList_filiere.style.display = "none";
                    }

        })

        etudiantList.addEventListener(
            "click",
            () => {
                if(dropDownList_etudiant.style.display === "none"){
                    dropDownList_etudiant.style.display = "block";
                }
                else{
                    dropDownList_etudiant.style.display = "none";
                }

            })


</script>

</body>
</html>